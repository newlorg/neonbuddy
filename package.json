{
  "name": "rushlab-neon-buddy",
  "version": "0.1.0",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "android:release": "cd android && gradlew.bat assembleRelease",
    "android:release:install": "cd android && gradlew.bat installRelease",
    "android:debug:build": "cd android && gradlew.bat app:assembleDebug --no-daemon --no-build-cache",
    "android:debug:install": "adb install -r android\\app\\build\\outputs\\apk\\debug\\app-debug.apk",
    "android:debug:run": "adb shell monkey -p com.rushlab.neonbuddy -c android.intent.category.LAUNCHER 1",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "expo": "^52.0.0",
    "expo-asset": "~11.0.5",
    "expo-status-bar": "~2.0.0",
    "expo-system-ui": "~4.0.9",
    "react": "^18.3.1",
    "react-native": "^0.76.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@types/react": "^18.3.5",
    "typescript": "^5.7.2"
  }
}
